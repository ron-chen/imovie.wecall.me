extends ../layout

block content
	.container
		table.table.table-striped
			thead
				tr
					th #
					th 海报
					th 名称
					th 导演
					th 类型
					th 语言
					th 上映时间
					th 查看
					th 更新
					th 删除
					
			tbody
				each item in movies
					tr(class="item-id-#{item._id}")
						th #{item._id}
						td 
							img(src="#{item.stills}",alt="#{item.name}",title="#{item.name}")
						td #{item.name}
						td #{item.directors}
						td #{item.types}
						td #{item.language}
						td #{item.showDate}
						td 
							a(target="_blank",href="../movie/detail/#{item._id}") 查看
						td 
							a(target="_blank",href="../admin/edit/#{item._id}") 修改
						td 
							button.btn.btn-danger.del(type="button",data-id="#{item._id}") 删除

	script(src="/js/adminMovie.js")


		