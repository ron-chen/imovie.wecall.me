extends ../../layout

block content
	.container
		table.table.table-striped
			thead
				tr
					th #
					th 姓名
					th 密码
					th 查看
					th 更新
					th 删除
					
			tbody
				each item in users
					tr(class="item-id-#{item._id}")
						th #{item._id}
						td #{item.name}
						td #{item.password}
						td 
							a(target="_blank",href="../user/detail/#{item._id}") 查看
						td 
							a(target="_blank",href="../user/edit/#{item._id}") 修改
						td 
							button.btn.btn-danger.del(type="button",data-id="#{item._id}") 删除




		